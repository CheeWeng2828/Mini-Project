@model Payment

@{
    ViewBag.Title = "Refund Detail";
}


<style>
    /* Minimal blue-themed table redesign */
    .refund-table {
        width: 100%;
        max-width: 720px;
        margin: 0 auto;
        border-collapse: separate;
        border-spacing: 0 8px;
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
    }

        .refund-table tr {
            background: #ffffff;
            box-shadow: 0 2px 6px rgba(13, 42, 148, 0.06);
            border-radius: 8px;
        }

        .refund-table th,
        .refund-table td {
            padding: 12px 16px;
            vertical-align: middle;
            border: none;
        }

        /* labels */
        .refund-table th {
            width: 40%;
            text-align: left;
            color: #475569;
            font-weight: 600;
            font-size: 14px;
            background: linear-gradient(180deg, rgba(29,78,216,0.03), transparent);
        }

        /* values */
        .refund-table td {
            text-align: left;
            color: #0f172a;
            font-size: 15px;
            font-weight: 500;
        }

    /* status pill */
    .status-pill {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 13px;
        font-weight: 700;
        color: #fff;
    }

    /* success & processing */
    .status-success {
        background: #16a34a;
    }
    /* green */
    .status-processing {
        background: #2563eb;
    }
    /* blue */
</style>

<table class="refund-table" role="table" aria-label="Refund details">
    <tr>
        <th scope="row">Payment ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th scope="row">Amount (RM)</th>
        <td>@(Model.Amount.ToString("F2"))</td>
    </tr>
    <tr>
        <th scope="row">Refund Status</th>
        <td>
            @if (Model.Status == "Refund")
            {
                <span class="status-pill status-success">Success</span>
            }
            else
            {
                <span class="status-pill status-processing">Processing</span>
            }
        </td>
    </tr>
    <tr>
        <th scope="row">Refund ID</th>
        <td>@Model.RefundId</td>
    </tr>
    <tr>
        <th scope="row">Date</th>
        <td>@(Model.RefundDate?.ToString("dd MMM yyyy HH:mm") ?? "-")</td>
    </tr>
</table>

@if(User.IsInRole("Member"))
{
    <button class="back-btn" data-get="/Checkout/History">Back</button>
}
@if(User.IsInRole("Admin"))
{
    <button class="back-btn" data-get="/Reservation/Index">Back</button>
}

