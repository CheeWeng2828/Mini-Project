@{
    ViewBag.Title = "Please Select Your Payment Method";
}

<style>
    /* Simple payment selection design */
    .payment-container {
        max-width: 760px;
        margin: 36px auto;
        padding: 18px;
        text-align: center;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: #333;
    }

        .payment-container p {
            margin: 0 0 14px 0;
            color: #666;
            font-size: 0.98rem;
        }

    .payment-selection {
        display: flex;
        gap: 18px;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

        /* Link card */
        .payment-selection a {
            display: inline-block;
            padding: 8px;
            border-radius: 10px;
            background: #ffffff;
            border: 1px solid #eee;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            text-decoration: none;
            transition: transform .12s ease, box-shadow .12s ease;
        }

            /* Hover / focus */
            .payment-selection a:hover,
            .payment-selection a:focus {
                transform: translateY(-4px);
                box-shadow: 0 10px 22px rgba(0,0,0,0.07);
                outline: none;
            }

        /* Logo size — controlled purely by CSS */
        .payment-selection img {
            width: 200px;
            height: 200px;
            object-fit: contain;
            display: block;
        }

    /* Smaller screens */
    @@media (max-width: 480px) {
        .payment-selection img

    {
        width: 140px;
        height: 140px;
    }

    .payment-container {
        padding: 12px;
        margin: 20px auto;
    }

    }
</style>
<div class="payment-container">
    <p>We support ...</p>
    <div class="payment-selection">
        <a href="/CheckOut/Index?Id=@ViewBag.ReservationId"><img src="/images/paypal-3.svg" style="width:200px;height:200px;" /></a>
        <a href="/Payment/PaymentDetail?Id=@ViewBag.ReservationId"><img src="/images/duitnow.svg" style="width:200px;height:200px;" /></a>
    </div>

</div>