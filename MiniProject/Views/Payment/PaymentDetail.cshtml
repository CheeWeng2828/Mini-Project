@{
    ViewBag.Title = "Payment Detail";
}

<style>
    /* Very simple, minimal styling for payment detail */
    .payment-container {
        max-width: 700px;
        margin: 34px auto;
        padding: 18px;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: #222;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.04);
        border: 1px solid #eee;
    }

        .payment-container p {
            margin: 8px 0;
            line-height: 1.4;
            font-size: 1rem;
        }

    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px dashed #f0f0f0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: #666;
        font-size: 0.95rem;
    }

    .detail-value {
        font-weight: 600;
        color: #111;
    }

    /* QR area (placeholder) */
    .qr-area {
        display: flex;
        gap: 14px;
        align-items: center;
        margin-top: 14px;
        padding: 12px;
        background: #fafafa;
        border-radius: 6px;
        border: 1px solid #f3f3f3;
    }

    .qr-placeholder {
        width: 160px;
        height: 160px;
        background: linear-gradient(180deg,#ffffff,#fbfbfb);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        border-radius: 6px;
        font-size: 0.9rem;
        color: #999;
    }

    /* Button */
    .button-pay {
        display: inline-block;
        margin-top: 16px;
        padding: 10px 18px;
        border-radius: 8px;
        background: #0b72ff;
        color: #fff;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: transform .12s ease, box-shadow .12s ease, opacity .12s;
    }

        .button-pay:active {
            transform: translateY(1px);
        }

        .button-pay[disabled] {
            opacity: 0.6;
            cursor: not-allowed;
        }

    /* Small screens — escaped for Razor */
    @@media (max-width: 480px) {
        .payment-container {
            padding: 12px;
            margin: 18px;
        }

        .qr-placeholder {
            width: 120px;
            height: 120px;
            font-size: 0.85rem;
        }
    }
</style>

<div class="payment-container">
    <p>Reservation ID : @ViewBag.rsId</p>
    <p>Payment Amount : RM @ViewBag.Amount</p>
    <p>Payment Method : QR E-Wallet Payment</p>
</div>

<button class="button-pay" data-get="/Payment/QR?Id=@ViewBag.rsId&amount=@ViewBag.Amount">Pay Now</button>
