@model Room

@{
    ViewBag.Title = "Detail";
    var r = Model;
    var photo = r.RoomTypes.RoomGalleries.Where(g => g.RoomTypeId == r.RoomTypeId).Select(g => g.PhotoURL).ToList();

}

<div class="detail-container">
    <div id="demo" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < photo.Count; i++)
            {
                <button type="button" data-bs-target="#demo" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
            }
        </div>
        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            @for (int i = 0; i < photo.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="/room/@photo[i]" alt="Room Image" class="d-block w-100">
                </div>
            }
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

<table class="table">
    <tr>
        <th>Id</th>
        <td>@r.Id</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@r.RoomTypes.Price</td>
    </tr>
    <tr>

    </tr>
    <tr>
        <th>Type</th>
        <td>@r.RoomTypes.Name</td>
    </tr>

</table>
<br>
<button class="btn btn-secondary" data-get="/Room/Index?typeId=@r.RoomTypeId">Back</button>