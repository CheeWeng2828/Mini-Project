@model UpdateRoomVm

@{
    ViewBag.Title = "Room | Update Room Record";
    var r = Model;

}

@* addsound *@
<audio id="notifySound" src="~/Sounds/ding-36029.mp3" preload="auto"></audio>

<div class="container mx-3 my-3 text-bg-light">
    <form method="post" id="updateRoom">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 mt-3">
            <label asp-for="Id"></label>
            <b>@r.Id</b>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="TypeId">Type</label>
            <select asp-for="TypeId" asp-items="ViewBag.CategoryList" class="form-select">
                <option value="">- Select One -</option>
            </select>
            <span asp-validation-for="TypeId"></span>
        </div>

        <div class="btn-group">
            <button class="btn btn-warning">Update</button>
            <button class="btn btn-danger" type="reset">Reset</button>
            <button class="btn btn-secondary" data-get="\Room\Index?typeId=@r.TypeId">Index</button>
        </div><br>
    </form>

</div>


@section foot {
    <script>
        const form = document.getElementById('updateRoom');
        const sound = document.getElementById('notifySound');

        form.addEventListener('submit', function (e) {
             // check validility
            const validator = $(form).data('validator');
            if (validator && !$(form).valid()) {
               //no valid->no sound
                e.preventDefault();
                return;
            }

            e.preventDefault();
            sound.currentTime = 0;
            sound.play().then(() => {
                setTimeout(() => form.submit(), 250);
            }).catch(() => form.submit());
        });
    </script>
}