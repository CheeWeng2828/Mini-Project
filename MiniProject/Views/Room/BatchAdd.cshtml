@model BatchAddVM
@{
    ViewBag.Title = "Room | Batch Add";
}

@* addsound *@
<audio id="notifySound" src="~/Sounds/ding-36029.mp3" preload="auto"></audio>

<form class="form" method="post" id="batchAdd">
    <label asp-for="TypeId">Type</label>
    <b>@ViewBag.TypeName</b>
    <input type="hidden" asp-for="TypeId" />

    <label asp-for="Count">Number of Room Record</label>
    <input type="number" asp-for="Count" />

    <section>
        <button class="btn btn-success">Add</button>
        <button class="btn btn-danger" type="reset">Reset</button>
        <button class="btn btn-light" data-get="/Room/Index?typeId=@ViewBag.TypeId">Index</button>
    </section>
</form>


@section foot {
    <script>
        const form = document.getElementById('batchAdd');
        const sound = document.getElementById('notifySound');

        form.addEventListener('submit', function (e) {
             // check validility
            const validator = $(form).data('validator');
            if (validator && !$(form).valid()) {
               //no valid->no sound
                e.preventDefault();
                return;
            }

            e.preventDefault();
            sound.currentTime = 0;
            sound.play().then(() => {
                setTimeout(() => form.submit(), 250);
            }).catch(() => form.submit());
        });
    </script>
}
