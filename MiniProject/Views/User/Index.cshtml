@{
    ViewBag.Title = "User Account Management";
}

<form data-ajax="true"
      data-ajax-update="#target"
      data-ajax-loading="#loader"
      id="f">
    @Html.TextBox("name", "",
    new { type = "search", autofocus = "", data_trim = "", placeholder = "User Name" })

    <button class="btn btn-primary">Search</button>
    <div class="spinner-border" id="loader" style="display: none"></div>
</form>

<div id="target">
    <partial name="User">
</div>

@section foot {
    <script>
        let timer = null;

        $('#name').on('input', e => {
            clearTimeout(timer);
            timer = setTimeout(() => $(e.target.form).submit(), 500);
        });
    </script>
}