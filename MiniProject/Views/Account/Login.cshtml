@model LoginVM

@{
    ViewBag.Title = "Sign in";
}

<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<div class="container mx-3 my-3">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-floating mb-3 mt-3">
            <input asp-for="Email" autofocus class="form-control" placeholder="Enter email">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-floating mb-3 mt-3">
            <input asp-for="Password" class="form-control" placeholder="Enter Password">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="mx-3">
            <label>
                <input class="form-check-input" asp-for="RememberMe">Remember Me
            </label>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <div class="g-recaptcha" data-sitekey="6Leo6ckrAAAAALKH38m9icnldgj1pc1wa8ulL7hp"></div>
        </div>

        <br>

        <br>

        <section class="d-grid gap-2 mb-3">
            <button class="btn btn-primary">Login</button>
            <button class="btn btn-danger" type="reset">Reset</button>
        </section>
    </form>
</div>

<p class="text-center">
    [ <a href="/Account/Register">Register</a> |
      <a href="/Account/ResetPassword">Reset Password</a> ]
</p>