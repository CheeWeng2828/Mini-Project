@model RegisterVM

@{
    ViewBag.Title = "Register";
}

<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<div class="container mx-3 my-3">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-floating mx-3 my-3">
            <input asp-for="Email" autofocus class="form-control" placeholder="Enter email">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating mx-3 my-3">
            <input asp-for="Password" class="form-control" placeholder="Enter password">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-floating mx-3 my-3">
            <input asp-for="Confirm" class="form-control" placeholder="Confirmation password">
            <label asp-for="Confirm"></label>
            <span asp-validation-for="Confirm"></span>
        </div>
        <div class="form-floating mx-3 my-3">
            <input asp-for="Name" class="form-control" placeholder="Enter name">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="g-recaptcha" data-sitekey="6Leo6ckrAAAAALKH38m9icnldgj1pc1wa8ulL7hp"></div>


        <section>
            <button class="btn btn-primary">Register</button>
            <button class="btn btn-danger" type="reset">Reset</button>
        </section>
    </form>

</div>



@section foot {
    <script>
        $.validator.setDefaults({ ignore: '' });
    </script>
}
