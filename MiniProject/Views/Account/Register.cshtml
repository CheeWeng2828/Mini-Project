@model RegisterVM

@{
    ViewBag.Title = "Account | Register";
}

<script src="https://www.google.com/recaptcha/api.js" async defer></script>


<form class="form" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Email"></label>
    <input asp-for="Email" autofocus>
    <span asp-validation-for="Email"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password">
    <span asp-validation-for="Password"></span>

    <label asp-for="Confirm"></label>
    <input asp-for="Confirm">
    <span asp-validation-for="Confirm"></span>

    <label asp-for="Name"></label>
    <input asp-for="Name">
    <span asp-validation-for="Name"></span>

    <div class="g-recaptcha" data-sitekey="6Leo6ckrAAAAALKH38m9icnldgj1pc1wa8ulL7hp"></div>


    <section>
        <button>Register</button>
        <button class="reset-btn" type="reset">Reset</button>
    </section>
</form>



@section foot {
    <script>
        $.validator.setDefaults({ ignore: '' });
    </script>
}
