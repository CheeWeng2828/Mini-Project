@model Member

@{
    ViewBag.Title = "Profile";
}

<div class="container-fluid">
    <div class="row" style="width:900px;">
        <div class="col-sm card">
        <img class="card-img-top" src="/photos/@Model.PhotoURL" alt="Profile image" style="width:50%">
            <div class="card-body">
            <h4 class="card-title text-center"><strong>@Model.Name</strong></h4>
            <hr />
                <p class="card-text">Email : @Model.Email</p>
                <p class="card-text">@Model.Role</p>
                <a href="/Account/UpdateProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>


        <div id="accordion" class="col-sm">

            <div class="card">
                <div class="card-header">
                    <a class="btn" data-bs-toggle="collapse" href="#collapseOne">
                        Security Setting
                    </a>
                </div>
                <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
                    <div class="card-body">
                        <a href="/Account/Logout" class="btn btn-danger">Logout Account</a>
                        <a href="/Account/UpdatePassword" class="btn btn-warning">Update Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>