@model Member

@{
    ViewBag.Title = "Profile";
}

<div class="container-fluid">
    <div class="row" style="width:900px;">
        <div class="col-sm card w3-card-4">
            <img class="card-img-top p-2 m-auto" src="/photos/@Model.PhotoURL" alt="Profile image" style="width:50%">
            <div class="card-body">
            <h4 class="card-title text-center"><strong>@Model.Name</strong></h4>
            <hr />
                <p class="card-text"><b>Email :</b> @Model.Email</p>
                <p class="card-text"><b>Role : </b>@Model.Role</p>
                <a href="/Account/UpdateProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>


        <div id="accordion" class="col-sm">

            <div class="card">
                <div class="card-header">
                    <a class="btn" data-bs-toggle="collapse" href="#collapseOne">
                        Security Setting
                    </a>
                </div>
                <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
                    <div class="card-body">
                        <a href="/Account/Logout" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout Account</a>
                        <a href="/Account/UpdatePassword" class="btn btn-warning">Update Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="logoutModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Confirm Logout ?</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Do you want to log out?
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-get="/Account/Logout">Logout</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>