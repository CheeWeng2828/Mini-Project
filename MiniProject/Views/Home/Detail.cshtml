@model RoomType
@{
    ViewBag.Title = "Detail";
    var r = Model;
    var photo = r.RoomGalleries.Where(g => g.RoomTypeId == r.Id).Select(g => g.PhotoURL).ToList();

}

<div class="detail-container">
    <div id="demo" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < photo.Count; i++)
            {
                <button type="button" data-bs-target="#demo" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
            }
        </div>
        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            @for (int i = 0; i < photo.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="/room/@photo[i]" alt="Room Image" class="d-block w-100">
                </div>
            }
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <table class="table">
        <tr>
            <th>Type</th>
            <td>@r.Name</td>
        </tr>
        <tr>
            <th>Price Per Night(RM)</th>
            <td>@r.Price</td>
        </tr>
    </table>

    <p>
        <button class="btn btn-light" data-get="/">Back</button>
        <button class="btn btn-primary" data-get="/Reservation/RoomStatus/@r.Id">Check Available</button>
    </p>
</div>

