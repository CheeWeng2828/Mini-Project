@model UpdateRoomTypeVm
@{
    ViewBag.Title = "Room Type | Update";
}
@* addsound *@
<audio id="notifySound" src="~/Sounds/ding-36029.mp3" preload="auto"></audio>

@section head {
    <style>
        .photos {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
        }

        .photo {
            position: relative;
        }

            .photo img {
                display: block;
                border: 1px solid #333;
                width: 200px;
                height: 200px;
                object-fit: cover;
            }

            .photo button {
                position: absolute;
                top: 0;
                right: 0;
            }
    </style>
}

<div class="container mx-3 my-3 text-bg-light">
    <form method="post" enctype="multipart/form-data" id="roomType">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mx-3 my-3">
            <label asp-for="Id"></label>
            <b>@Model.Id</b>
        </div>
        <div class="mx-3 my-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mx-3 my-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="mx-3 my-3">
        <label asp-for="Photo"></label>
        <label class="upload">
                <input asp-for="Photo" accept="image/jpeg,image/png" multiple class="form-control">
        </label>
        <span asp-validation-for="Photo"></span>
        </div>

        <section>
            <button class="btn btn-primary">Submit</button>
            <button class="btn btn-danger" type="reset">Reset</button>
        </section>
    </form>
</div>

<div class="photos">
    @foreach (var photo in Model.PhotoURL)
    {
        <div class="photo">
            <img src="/room/@photo">
            <button data-post="/RoomType/DeletePhoto?file=@photo&id=@Model.Id">X</button>
        </div>
    }
</div>

@section foot {
    <script>
        const form = document.getElementById('roomType');
        const sound = document.getElementById('notifySound');

        form.addEventListener('submit', function (e) {
             // check validility
            const validator = $(form).data('validator');
            if (validator && !$(form).valid()) {
               //no valid->no sound
                e.preventDefault();
                return;
            }

            e.preventDefault();
            sound.currentTime = 0;
            sound.play().then(() => {
                setTimeout(() => form.submit(), 250);
            }).catch(() => form.submit());
        });
    </script>
}