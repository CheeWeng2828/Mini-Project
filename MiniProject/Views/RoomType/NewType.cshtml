@model AddTypeVM
@{
    ViewBag.Title = "New Room Type";
}
@* addsound *@
<audio id="notifySound" src="~/Sounds/ding-36029.mp3" preload="auto"></audio>

<div class="container mx-3 my-3 text-bg-light">
    <form method="post" enctype="multipart/form-data" id="addRoomType">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 mt-3">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" autofocus data-upper class="form-control">
            <span asp-validation-for="Id"></span>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control">
            <span asp-validation-for="Price"></span>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="Photo"></label>
            <label class="upload">
                <input asp-for="Photo" accept="image/jpeg,image/png" multiple class="form-control">
            </label>
            <span asp-validation-for="Photo"></span>
        </div>

        <section>
            <button class="btn btn-primary">Submit</button>
            <button class="btn btn-danger" type="reset">Reset</button>
            <button class="btn btn-secondary" data-get="/RoomType/">Back</button>

        </section>
    </form>

</div>

@section foot {
    <script>
        const form = document.getElementById('addRoomType');
        const sound = document.getElementById('notifySound');

        form.addEventListener('submit', function (e) {
             // check validility
            const validator = $(form).data('validator');
            if (validator && !$(form).valid()) {
               //no valid->no sound
                e.preventDefault();
                return;
            }

            e.preventDefault();
            sound.currentTime = 0;
            sound.play().then(() => {
                setTimeout(() => form.submit(), 250);
            }).catch(() => form.submit());
        });
    </script>
}
