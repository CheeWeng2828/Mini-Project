@model AddTypeVM
@{
    ViewBag.Title = "Type | New Room Type";
}
@* addsound *@
<audio id="notifySound" src="~/Sounds/ding-36029.mp3" preload="auto"></audio>

<form method="post" enctype="multipart/form-data" class="form" id="addRoomType">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Id">Id</label>
    <input asp-for="Id" autofocus data-upper>
    <span asp-validation-for="Id"></span>


    <label asp-for="Name">Name</label>
    <input asp-for="Name">
    <span asp-validation-for="Name"></span>

    <label asp-for="Price">Price</label>
    <input asp-for="Price" type="number">
    <span asp-validation-for="Price"></span>


    <label asp-for="Photo"></label>
    <label class="upload">
        <input asp-for="Photo" accept="image/jpeg,image/png" multiple>
    </label>
    <span asp-validation-for="Photo"></span>

    <section>
        <button>Submit</button>
        <button class="reset-btn" type="reset">Reset</button>
    </section>
</form>

@section foot {
    <script>
        const form = document.getElementById('addRoomType');
        const sound = document.getElementById('notifySound');

        form.addEventListener('submit', function (e) {
             // check validility
            const validator = $(form).data('validator');
            if (validator && !$(form).valid()) {
               //no valid->no sound
                e.preventDefault();
                return;
            }

            e.preventDefault();
            sound.currentTime = 0;
            sound.play().then(() => {
                setTimeout(() => form.submit(), 250);
            }).catch(() => form.submit());
        });
    </script>
}
