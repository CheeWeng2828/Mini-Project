@model AddReviewVM
@{
    ViewBag.Title = "New Review";
}
<style>


    h2 {
        text-align: center;
        font-size: 2.2rem;
        font-weight: 300;
        margin-bottom: 40px;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        padding: 20px;
        border-radius: 15px;
        backdrop-filter: blur(10px);
    }

        h2 strong {
            color: #ffd700;
            font-weight: 600;
        }

    #notifySound {
        display: none;
    }

    form {
        background: rgba(255,255,255,0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        max-width: 600px;
        margin: 0 auto;
        backdrop-filter: blur(10px);
    }

    input[type="hidden"] {
        display: none;
    }

    label {
        display: block;
        font-weight: 600;
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
        margin-top: 25px;
    }

        label:first-of-type {
            margin-top: 0;
        }

    textarea {
        width: 100%;
        padding: 15px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 16px;
        font-family: inherit;
        resize: vertical;
        transition: all 0.3s ease;
        background: #f8f9fa;
        box-sizing: border-box;
    }

        textarea:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.2);
        }

        textarea::placeholder {
            color: #6c757d;
            font-style: italic;
        }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
        display: block;
        margin-top: 5px;
        font-weight: 500;
    }

    br {
        line-height: 1.5;
    }

    .rating-btn {
        background: linear-gradient(45deg, #f8f9fa, #e9ecef);
        border: 2px solid #dee2e6;
        color: #495057;
        padding: 12px 18px;
        margin: 5px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .rating-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            background: linear-gradient(45deg, #fff, #f8f9fa);
        }

    .clean-btn {
        border-color: #28a745;
        color: #28a745;
    }

        .clean-btn:hover {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            border-color: #28a745;
        }

    .service-btn {
        border-color: #007bff;
        color: #007bff;
    }

        .service-btn:hover {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
            border-color: #007bff;
        }

    .overall-btn {
        border-color: #fd7e14;
        color: #fd7e14;
    }

        .overall-btn:hover {
            background: linear-gradient(45deg, #fd7e14, #e55100);
            color: white;
            border-color: #fd7e14;
        }

    button[type="submit"] {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
        color: white;
        padding: 18px 40px;
        border-radius: 50px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        margin-top: 30px;
        width: 100%;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        button[type="submit"]:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

        button[type="submit"]:active {
            transform: translateY(-1px);
        }

    /* Rating sections spacing */
    form > br + br {
        display: none;
    }

    /* Better mobile responsiveness */
    @@media (max-width: 768px) {
        form

    {
        padding: 25px 20px;
        margin: 10px;
    }

    h2 {
        font-size: 1.8rem;
        padding: 15px;
    }

    .rating-btn {
        padding: 10px 15px;
        margin: 3px;
    }

    textarea {
        font-size: 16px; /* Prevent zoom on iOS */
    }
    }

    .rating-btn.selected {
        background: gold !important;
        color: #333 !important;
        border-color: #ffd700 !important;
    }

        .rating-btn.selected:hover {
            background: gold !important;
            color: #333 !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 215, 0, 0.4);
        }

</style>
