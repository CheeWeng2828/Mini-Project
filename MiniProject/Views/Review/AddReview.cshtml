<form asp-action="AddReview" asp-controller="Review" method="post" id="addreview">

    @* <input type="hidden" asp-for="BookingId" />
    <input type="hidden" asp-for="HotelId" />
    <input type="hidden" asp-for="HotelName" /> *@

    <label asp-for="Comment">Reviews:</label><br>
    <textarea asp-for="Comment" rows="4" cols="50" placeholder="Share your experience here .."></textarea><br>
    <span asp-validation-for="Comment" class="text-danger"></span>
    <br><br>

    <label>Cleanliness</label><br>
    @for (int i = 1; i <= 5; i++)
    {
        <button type="button" class="rating-btn clean-btn" onclick="setRating(@i, 'CleanlinessRating', 'clean-btn')">@i</button>
    }
    <input type="hidden" asp-for="CleanlinessRating" id="CleanlinessRating" />
    <span asp-validation-for="CleanlinessRating" class="text-danger"></span>
    <br><br>

    <label>Service</label><br>
    @for (int i = 1; i <= 5; i++)
    {
        <button type="button" class="rating-btn service-btn" onclick="setRating(@i, 'ServiceRating', 'service-btn')">@i</button>
    }
    <input type="hidden" asp-for="ServiceRating" id="ServiceRating" />
    <span asp-validation-for="ServiceRating" class="text-danger"></span>
    <br><br>

    <label>Overall Rating</label><br>
    @for (int i = 1; i <= 5; i++)
    {
        <button type="button" class="rating-btn overall-btn" onclick="setRating(@i, 'Rating', 'overall-btn')">@i</button>
    }
    <input type="hidden" asp-for="Rating" id="Rating" />
    <span asp-validation-for="Rating" class="text-danger"></span>
    <br><br>

    <button type="submit">Submit Review</button>
</form>

@section foot {
    <script>
        function setRating(value, fieldId, btnClass) {

            document.getElementById(fieldId).value = value;
            document.querySelectorAll('.' + btnClass).forEach(btn => 
                {
                    btn.style.background = '';
                    btn.style.color = '';
                    btn.classList.remove('selected');
                });
            for(let i = 0;i < value; i ++)
            {
                const btn = document.querySelectorAll('.' + btnClass)[i];
                btn.style.background = 'gold';
                btn.style.color = '#333';
                btn.classList.add('selected');
            }
        }
    </script>
