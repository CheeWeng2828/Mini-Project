@model UpdateReviewVM
@{
    ViewBag.Title = "Update Review";
}

<style>
    form {
        background: rgba(255,255,255,0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        max-width: 600px;
        margin: 0 auto;
        backdrop-filter: blur(10px);
    }

    label {
        display: block;
        font-weight: 600;
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
        margin-top: 25px;
    }

    textarea {
        width: 100%;
        padding: 15px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 16px;
        font-family: inherit;
        resize: vertical;
        transition: all 0.3s ease;
        background: #f8f9fa;
        box-sizing: border-box;
    }

    textarea:focus {
        outline: none;
        border-color: #667eea;
        background: white;
        box-shadow: 0 0 20px rgba(102, 126, 234, 0.2);
    }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
        display: block;
        margin-top: 5px;
        font-weight: 500;
    }

    .rating-btn {
        background: linear-gradient(45deg, #f8f9fa, #e9ecef);
        border: 2px solid #dee2e6;
        color: #495057;
        padding: 12px 18px;
        margin: 5px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .rating-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        background: linear-gradient(45deg, #fff, #f8f9fa);
    }

    .clean-btn { border-color: #28a745; color: #28a745; }
    .service-btn { border-color: #007bff; color: #007bff; }
    .overall-btn { border-color: #fd7e14; color: #fd7e14; }

    .rating-btn.selected {
        background: gold !important;
        color: #333 !important;
        border-color: #ffd700 !important;
    }

    button[type="submit"] {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
        color: white;
        padding: 18px 40px;
        border-radius: 50px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        margin-top: 30px;
        width: 100%;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    button[type="submit"]:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
    }
</style>

<form asp-action="UpdateReview" asp-controller="Review" method="post" id="updateReviewForm">
    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BookingId" />
    


    <label asp-for="Comment">Reviews:</label>
    <textarea asp-for="Comment" rows="4" placeholder="Share your experience here .."></textarea>
    <span asp-validation-for="Comment" class="text-danger"></span>

    <label>Cleanliness</label>
    @for (int i = 1; i <= 5; i++)
    {
        var selected = Model.CleanlinessRating >= i ? "selected" : "";
        <button type="button" class="rating-btn clean-btn @selected" onclick="setRating(@i, 'CleanlinessRating', 'clean-btn')">@i</button>
    }
    <input type="hidden" asp-for="CleanlinessRating" value="@Model.CleanlinessRating" />
    <span asp-validation-for="CleanlinessRating" class="text-danger"></span>

    <label>Service</label>
    @for (int i = 1; i <= 5; i++)
    {
        var selected = Model.ServiceRating >= i ? "selected" : "";
        <button type="button" class="rating-btn service-btn @selected" onclick="setRating(@i, 'ServiceRating', 'service-btn')">@i</button>
    }
    <input type="hidden" asp-for="ServiceRating" value="@Model.ServiceRating" />
    <span asp-validation-for="ServiceRating" class="text-danger"></span>

    <label>Overall Rating</label>
    @for (int i = 1; i <= 5; i++)
    {
        var selected = Model.Rating >= i ? "selected" : "";
        <button type="button" class="rating-btn overall-btn @selected" onclick="setRating(@i, 'Rating', 'overall-btn')">@i</button>
    }
    <input type="hidden" asp-for="Rating" value="@Model.Rating" />
    <span asp-validation-for="Rating" class="text-danger"></span>

    <button type="submit">Update Review</button>
</form>

@section foot {
    <script>
        function setRating(value, fieldId, btnClass) {
            document.getElementById(fieldId).value = value;
            document.querySelectorAll('.' + btnClass).forEach(btn => {
                btn.classList.remove('selected');
                btn.style.background = '';
                btn.style.color = '';
            });
            for (let i = 0; i < value; i++) {
                const btn = document.querySelectorAll('.' + btnClass)[i];
                btn.style.background = 'gold';
                btn.style.color = '#333';
                btn.classList.add('selected');
            }
        }
    </script>
}
